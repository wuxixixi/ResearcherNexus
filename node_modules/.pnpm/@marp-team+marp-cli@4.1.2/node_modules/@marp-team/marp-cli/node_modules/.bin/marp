#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/d/ResearcherNexus/node_modules/.pnpm/@marp-team+marp-cli@4.1.2/node_modules/@marp-team/marp-cli/node_modules:/mnt/d/ResearcherNexus/node_modules/.pnpm/@marp-team+marp-cli@4.1.2/node_modules/@marp-team/node_modules:/mnt/d/ResearcherNexus/node_modules/.pnpm/@marp-team+marp-cli@4.1.2/node_modules:/mnt/d/ResearcherNexus/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/d/ResearcherNexus/node_modules/.pnpm/@marp-team+marp-cli@4.1.2/node_modules/@marp-team/marp-cli/node_modules:/mnt/d/ResearcherNexus/node_modules/.pnpm/@marp-team+marp-cli@4.1.2/node_modules/@marp-team/node_modules:/mnt/d/ResearcherNexus/node_modules/.pnpm/@marp-team+marp-cli@4.1.2/node_modules:/mnt/d/ResearcherNexus/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../marp-cli.js" "$@"
else
  exec node  "$basedir/../../marp-cli.js" "$@"
fi
